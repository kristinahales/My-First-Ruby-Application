<%# partials are html files %>

<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
    <%# alert_generator is from application/helper.rb  %>
    <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: '15' %>
  </div>

  <div class='form-group'>
    <%# button has to have a name in order for bootstrap button styles to be applied  %>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
